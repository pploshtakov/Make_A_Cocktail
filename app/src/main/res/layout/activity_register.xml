<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/yellowBackground"
    tools:context="com.example.pesho.make_a_cocktail.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:lines="1"
            android:inputType="textPersonName"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/name"
            android:id="@+id/RPNameText"
            android:gravity="end|bottom"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:lines="1"
            android:inputType="textPersonName"
            android:id="@+id/RPUserText"
            android:hint="@string/user_name"
            android:gravity="end|bottom"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:lines="1"
            android:hint="@string/password"
            android:id="@+id/RPPasswordText"
            android:gravity="end|bottom"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:lines="1"
            android:layout_weight="1"
            android:hint="@string/repeat_password"
            android:id="@+id/RPRepeatPassword"
            android:gravity="end|bottom"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:lines="1"
            android:inputType="textPersonName"
            android:hint="@string/enter_email"
            android:id="@+id/RPEmail"
            android:gravity="end|bottom"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/RPRegisterButton"
            android:text="@string/register" />
    </LinearLayout>

</RelativeLayout>
