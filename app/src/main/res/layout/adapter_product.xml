<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="100dp">


    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/ingridientImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/ingridientNameTV"
        android:layout_alignBottom="@+id/ingridientImageView"
        android:layout_toRightOf="@+id/ingridientImageView"
        android:layout_toEndOf="@+id/ingridientImageView" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/shoppingCartButton"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@+id/ingridientNameTV"
        android:layout_toEndOf="@+id/ingridientNameTV"
        android:src="@mipmap/shopping_cart" />
</LinearLayout>